<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationFinishedActivity">

    <Toolbar
        android:id="@+id/toolbar_reservation_finished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:navigationIcon="@drawable/arrow_back_24px"
        android:title="Movie"
        android:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_reservation_finished"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:background="@color/dark_skyblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_reservation_finished" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="영화 상영 시작 시간 15분 전까지\n취소가 가능합니다."
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view_reservation_finished"
        app:layout_constraintEnd_toEndOf="@id/view_reservation_finished"
        app:layout_constraintStart_toStartOf="@id/view_reservation_finished" />

    <TextView
        android:id="@+id/text_view_reservation_finished_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="해리 포터와 마법사의 돌"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_reservation_finished" />

    <TextView
        android:id="@+id/text_view_reservation_finished_screening_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="2024.3.1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/text_view_reservation_finished_title"
        app:layout_constraintStart_toStartOf="@id/text_view_reservation_finished_title"
        app:layout_constraintTop_toBottomOf="@id/text_view_reservation_finished_title" />

    <TextView
        android:id="@+id/text_view_reservation_finished_number_of_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="일반 1명"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/text_view_reservation_finished_title"
        app:layout_constraintStart_toStartOf="@id/text_view_reservation_finished_title"
        app:layout_constraintTop_toBottomOf="@id/text_view_reservation_finished_screening_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="13,000원 (현장 결제)"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/text_view_reservation_finished_title"
        app:layout_constraintStart_toStartOf="@id/text_view_reservation_finished_title"
        app:layout_constraintTop_toBottomOf="@id/text_view_reservation_finished_number_of_tickets" />

</androidx.constraintlayout.widget.ConstraintLayout>